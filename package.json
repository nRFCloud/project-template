{
  "name": "@nrfcloud/${repo}",
  "version": "0.0.0-development",
  "description": "${description}",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "pretest": "npm run prepare",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage",
    "lint": "npm run tslint && npm run prettier:lint",
    "tslint": "tslint --project ./tsconfig.json",
    "prettier": "prettier --write \"./**/*.ts\"",
    "prettier:lint": "prettier --list-different \"./**/*.ts\"",
    "precommit": "npm run lint && npm test",
    "commitmsg": "commitlint -e",
    "prepare": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nRFCloud/${repo}.git"
  },
  "keywords": [
    "nRFCloud",
    "IoT",
    "NordicSemiconductor"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/nRFCloud/${repo}/issues"
  },
  "homepage": "https://github.com/nRFCloud/${repo}#readme",
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-angular": "^7.0.1",
    "@nrfcloud/tslint-config": "^3.4.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.5.7",
    "husky": "^0.14.3",
    "jest": "^23.4.2",
    "prettier": "^1.14.0",
    "ts-jest": "^23.1.3",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "coverageReporters": [
      "html",
      "lcov"
    ],
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true,
        "skipBabel": true
      }
    },
    "testURL": "http://localhost"
  },
  "files": [
    "package-lock.json",
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "release": {
    "branch": "saga",
    "remoteTags": true
  }
}
